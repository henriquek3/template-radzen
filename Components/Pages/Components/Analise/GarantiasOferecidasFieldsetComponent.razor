<RadzenRow>
    <RadzenColumn>
        <RadzenCard>
            <RadzenTemplateForm Data="@dados">
                <RadzenRow>
                    <RadzenColumn>
                        <RadzenFieldset>
                            <HeaderTemplate>
                                <RadzenStack Orientation="Orientation.Horizontal" Gap="0.25rem">
                                    <RadzenIcon Icon="agriculture"/>
                                    <b>Garantias Oferecidas</b>
                                </RadzenStack>
                            </HeaderTemplate>
                            <ChildContent>
                                <RadzenStack Gap="1rem" class="rz-overflow-auto">
                                    <RadzenRow>
                                        <RadzenColumn>
                                            <RadzenDataGrid TItem="Garantia"
                                                            Data="@_garantias"
                                                            AllowSorting="true"
                                                            Density="Density.Compact"
                                                            Responsive="true"
                                                            AllowFiltering="true"
                                                            AllowPaging="true"
                                                            PageSize="10"
                                            >
                                                <!-- Colunas -->
                                                <Columns>
                                                    <RadzenDataGridColumn TItem="Garantia" Property="TipoGarantia"
                                                                          Title="Garantia"/>
                                                    <RadzenDataGridColumn TItem="Garantia" Property="Penhoravel"
                                                                          Title="Penhorável"/>
                                                    <RadzenDataGridColumn TItem="Garantia" Property="Matricula"
                                                                          Title="Matrícula"/>
                                                    <RadzenDataGridColumn TItem="Garantia" Property="Area"
                                                                          Title="Área (ha)"/>
                                                    <RadzenDataGridColumn TItem="Garantia" Property="AnoSafra"
                                                                          Title="Ano Safra"/>
                                                    <RadzenDataGridColumn TItem="Garantia" Property="Produto"
                                                                          Title="Produto"/>
                                                    <RadzenDataGridColumn TItem="Garantia" Property="TipoSolo"
                                                                          Title="Tipo de Solo"/>
                                                    <RadzenDataGridColumn TItem="Garantia" Property="Vencimento"
                                                                          Title="Vencimento"/>
                                                    <RadzenDataGridColumn TItem="Garantia" Property="Valor"
                                                                          Title="Valor R$" FormatString="C2"/>
                                                    <RadzenDataGridColumn TItem="Garantia" Property="EstaOnerado"
                                                                          Title="Está Onerado(a)?"/>
                                                    <RadzenDataGridColumn TItem="Garantia"
                                                                          Property="AnexouDocumento"
                                                                          Title="Anexou Documento?"/>
                                                </Columns>
                                            </RadzenDataGrid>
                                        </RadzenColumn>
                                    </RadzenRow>
                                </RadzenStack>
                            </ChildContent>
                        </RadzenFieldset>
                    </RadzenColumn>
                </RadzenRow>
                <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center" Gap="1rem"
                             class="rz-mt-8 rz-mb-4">
                    <RadzenButton Icon="edit" Text="Editar Garantias"/>
                </RadzenStack>
            </RadzenTemplateForm>
        </RadzenCard>
    </RadzenColumn>
</RadzenRow>
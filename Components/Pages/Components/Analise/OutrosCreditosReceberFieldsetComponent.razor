<RadzenRow>
    <RadzenColumn>
        <RadzenCard>
            <RadzenFieldset>
                <HeaderTemplate>
                    <RadzenStack Orientation="Orientation.Horizontal">
                        <RadzenIcon Icon="home_pin"/>
                        <b>Outros Créditos a Receber</b>
                    </RadzenStack>
                </HeaderTemplate>
                <ChildContent>
                    <RadzenStack>
                        <RadzenRow>
                            <RadzenColumn>
                                <RadzenStack Gap="1rem">
                                    <RadzenRow>
                                        <RadzenColumn>
                                            <RadzenLabel>
                                                <strong>Herança</strong>
                                            </RadzenLabel>
                                        </RadzenColumn>
                                        <RadzenColumn>
                                            <RadzenTextBox
                                                Style="width: 100%;"
                                                Placeholder="R$ 0,00"
                                                TValue="string"
                                            />
                                        </RadzenColumn>
                                    </RadzenRow>

                                    <RadzenRow>
                                        <RadzenColumn>
                                            <RadzenLabel>
                                                <strong>Venda de Terra</strong>
                                            </RadzenLabel>
                                        </RadzenColumn>
                                        <RadzenColumn>
                                            <RadzenTextBox
                                                Style="width: 100%;"
                                                Placeholder="R$ 0,00"
                                                TValue="string"
                                            />
                                        </RadzenColumn>
                                    </RadzenRow>

                                    <RadzenRow>
                                        <RadzenColumn>
                                            <RadzenLabel>
                                                <strong>Salários em Emprego</strong>
                                            </RadzenLabel>
                                        </RadzenColumn>
                                        <RadzenColumn>
                                            <RadzenTextBox
                                                Style="width: 100%;"
                                                Placeholder="R$ 0,00"
                                                TValue="string"
                                            />
                                        </RadzenColumn>
                                    </RadzenRow>

                                    <RadzenRow>
                                        <RadzenColumn>
                                            <RadzenLabel>
                                                <strong>Arrendamentos</strong>
                                            </RadzenLabel>
                                        </RadzenColumn>
                                        <RadzenColumn>
                                            <RadzenTextBox
                                                Style="width: 100%;"
                                                Placeholder="R$ 0,00"
                                                TValue="string"
                                            />
                                        </RadzenColumn>
                                    </RadzenRow>
                                </RadzenStack>
                            </RadzenColumn>
                            <RadzenColumn>
                                <RadzenStack Gap="1rem">
                                    <RadzenRow>
                                        <RadzenColumn>
                                            <RadzenLabel>
                                                <strong>Serviços</strong>
                                            </RadzenLabel>
                                        </RadzenColumn>
                                        <RadzenColumn>
                                            <RadzenTextBox
                                                Style="width: 100%;"
                                                Placeholder="R$ 0,00"
                                                TValue="string"/>
                                        </RadzenColumn>
                                    </RadzenRow>
                                    <RadzenRow>
                                        <RadzenColumn>
                                            <RadzenLabel>
                                                <strong>Aluguéis</strong>
                                            </RadzenLabel>
                                        </RadzenColumn>
                                        <RadzenColumn>
                                            <RadzenTextBox
                                                Style="width: 100%;"
                                                Placeholder="R$ 0,00"
                                                TValue="string"/>
                                        </RadzenColumn>
                                    </RadzenRow>

                                    <RadzenRow>
                                        <RadzenColumn>
                                            <RadzenLabel>
                                                <strong>Venda Patrimônios</strong>
                                            </RadzenLabel>
                                        </RadzenColumn>
                                        <RadzenColumn>
                                            <RadzenTextBox
                                                Style="width: 100%;"
                                                Placeholder="R$ 0,00"
                                                TValue="string"/>
                                        </RadzenColumn>
                                    </RadzenRow>

                                    <RadzenRow>
                                        <RadzenColumn>
                                            <RadzenLabel>
                                                <strong>Outros</strong>
                                            </RadzenLabel>
                                        </RadzenColumn>
                                        <RadzenColumn>
                                            <RadzenTextBox
                                                Style="width: 100%;"
                                                Placeholder="R$ 0,00"
                                                TValue="string"/>
                                        </RadzenColumn>
                                    </RadzenRow>
                                </RadzenStack>
                            </RadzenColumn>
                            <RadzenColumn>
                                <RadzenFieldset Style="height: 100%;">
                                    <HeaderTemplate>
                                        <RadzenStack Orientation="Orientation.Horizontal">
                                            <b>Observações</b>
                                        </RadzenStack>
                                    </HeaderTemplate>
                                    <ChildContent >
                                        <RadzenTextArea
                                            Placeholder="Observações"
                                            Style="width: 100%; height: 100%;"
                                            Rows="5"
                                        ></RadzenTextArea>
                                    </ChildContent>
                                </RadzenFieldset>
                            </RadzenColumn>
                        </RadzenRow>
                    </RadzenStack>
                    
                    <!--suppress CssUnresolvedCustomProperty -->
                    <RadzenStack
                        Style="border-top: var(--rz-panel-menu-item-border);"
                        Orientation="Orientation.Horizontal" 
                        JustifyContent="JustifyContent.Center" 
                        Gap="1rem"
                        class="rz-mt-3 rz-pt-3">
                        <RadzenButton Icon="save" Text="Salvar Outros Créditos a Receber"/>
                    </RadzenStack>
                </ChildContent>
            </RadzenFieldset>
        </RadzenCard>
    </RadzenColumn>
</RadzenRow>
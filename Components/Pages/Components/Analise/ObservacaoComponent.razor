<RadzenRow>
    <RadzenColumn>
        <RadzenCard>
            <RadzenFieldset>
                <HeaderTemplate>
                    <RadzenStack Orientation="Orientation.Horizontal">
                        <RadzenIcon Icon="edit_note"/>
                        <b>Observações</b>
                    </RadzenStack>
                </HeaderTemplate>
                <ChildContent>
                    <RadzenHtmlEditor
                        @bind-Value=@htmlValue
                        style="height: 450px;"
                        Input=@OnInput
                        Change=@OnChange
                        Paste=@OnPaste
                        UploadComplete=@OnUploadComplete
                        Execute=@OnExecute
                        UploadUrl="upload/image"
                    />
                    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center" Gap="1rem"
                                 class="rz-mt-4 rz-mb-2">
                        <RadzenButton Icon="save" Text="Salvar Observações"/>
                    </RadzenStack>
                </ChildContent>
            </RadzenFieldset>
        </RadzenCard>
    </RadzenColumn>
</RadzenRow>
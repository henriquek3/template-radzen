<RadzenDataGrid FilterText="Filtro"
                Data="@analiseCreditos"
                AllowFiltering="true"
                AllowPaging="true"
                PageSize=5
                PageSizeOptions="@(new int[] { 5, 10, 25, 50, 100 })"
                PagerHorizontalAlign="HorizontalAlign.Center"
                ColumnWidth="200px"
                Responsive="true"
                PageSizeText="Itens/página"
                EmptyText="Nenhum item encontrado">
    <Columns>
        <RadzenDataGridColumn Property="@nameof(AnaliseCreditoModel.Cliente)" Filterable="true" Title="Cliente"
                              Width="170px">
            <Template Context="dados">
                <RadzenText><b>@dados.Cliente</b></RadzenText>
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn
            Property="@nameof(AnaliseCreditoModel.ValorSolicitado)"
            Title="Valor Solicitado"
            Width="50px"
        />
        <RadzenDataGridColumn Property="@nameof(AnaliseCreditoModel.ConceitoComercial)" Title="Conceito Comercial"
                              Width="50px"/>

        <RadzenDataGridColumn Property="@nameof(AnaliseCreditoModel.Id)" Title="Opções" Width="10%">
            <Template Context="data">
                <RadzenLink Path="AnaliseCreatePage">
                    <RadzenButton Icon="edit_document" IconColor="white"/>
                </RadzenLink>
                <RadzenButton Icon="delete" IconColor="white"/>
            </Template>
        </RadzenDataGridColumn>
    </Columns>
</RadzenDataGrid>


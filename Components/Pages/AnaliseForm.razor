@page "/analise-form"
@using Front.Components.Pages.Components.Analise

<PageTitle>Análise de Crédito</PageTitle>

<RadzenStack Gap="1rem">
    <RadzenRow>
        <RadzenColumn Size="12">
            <RadzenText Text="Análise de Crédito" TextStyle="TextStyle.H3" TagName="TagName.H1"/>
        </RadzenColumn>
    </RadzenRow>

    <RadzenRow>
        <RadzenColumn>
            <RadzenCard>
                <RadzenRow>
                    <RadzenColumn Size="6">
                        <RadzenRow AlignItems="AlignItems.Center" class="rz-mb-2">
                            <RadzenColumn Size="12" SizeMD="4">
                                <RadzenLabel Text="Matrícula" Component="Matricula"/>
                            </RadzenColumn>
                            <RadzenColumn Size="12" SizeMD="8">
                                <RadzenTextBox Placeholder="Matrícula"
                                               Style="width: 100%;" Name="Matricula"/>
                            </RadzenColumn>
                        </RadzenRow>
                    </RadzenColumn>
                    <RadzenColumn Size="4">
                        <RadzenButton>Consulta</RadzenButton>
                        <RadzenButton
                            ButtonStyle="ButtonStyle.Danger" Variant="Variant.Flat"
                            Icon="cancel"
                            Text="Excluir"
                        />
                        <RadzenButton>Nova Análise</RadzenButton>
                    </RadzenColumn>
                </RadzenRow>
            </RadzenCard>
        </RadzenColumn>
    </RadzenRow>

    <DadosGeraisFieldsetComponent/>

    <GarantiasOferecidasFieldsetComponent/>

    <ObservacaoComponent/>

    <RadzenRow>
        <RadzenColumn Size="12">
            <RadzenText
                Text="INFORMAÇÕES COMPLEMENTARES PARA A COMPOSIÇÃO DO SCORE E CONCEITO"
                TextStyle="TextStyle.H5"
                TagName="TagName.H5"
                Style="color: #4340d2;border-bottom: 1px gray solid"
                TextAlign="TextAlign.Center"
            />
        </RadzenColumn>
    </RadzenRow>

    <DividasFieldsetComponent/>

    <AreasFieldsetComponent/>

    <BensCreditosFieldsetComponent/>

    <OutrosCreditosReceberFieldsetComponent/>

    <ConclusaoAnaliseUnidadeFieldsetComponent/>

    <AnaliseComiteFieldsetComponent/>

</RadzenStack>

@page "/analise-form"
@using Front.Components.Pages.Components.Analise

<PageTitle>Análise de Crédito</PageTitle>

<RadzenStack Gap="1rem">
    <RadzenRow>
        <RadzenColumn Size="12">
            <RadzenText Text="Análise de Crédito" TextStyle="TextStyle.H3" TagName="TagName.H1"/>
        </RadzenColumn>
    </RadzenRow>

    <RadzenRow>
        <RadzenColumn>
            <RadzenCard>
                <RadzenRow>
                    <RadzenColumn Size="6">
                        <RadzenRow AlignItems="AlignItems.Center" class="rz-mb-2">
                            <RadzenColumn Size="12" SizeMD="4">
                                <RadzenLabel Text="Matrícula" Component="Matricula"/>
                            </RadzenColumn>
                            <RadzenColumn Size="12" SizeMD="8">
                                <RadzenTextBox Placeholder="Matrícula"
                                               Style="width: 100%;" Name="Matricula"/>
                            </RadzenColumn>
                        </RadzenRow>
                    </RadzenColumn>
                    <RadzenColumn Size="2">
                        <RadzenButton>Consulta</RadzenButton>
                    </RadzenColumn>
                </RadzenRow>
            </RadzenCard>
        </RadzenColumn>
    </RadzenRow>
    
    <DadosGeraisFieldsetComponent />

    
</RadzenStack>
